<section class="packages" id="packages">
    <div class="container">
        <div class="row">
            {{#each data }}
            <h3 class="heading text-center fw-bolder text-danger text-uppercase">The product has been found '{{ name }}'</h3>
            <div class="col-md-2 py-3 py-md-0">
                <div class="card">
                    <a href="products/show/{{_id}}">
                        <img width="100%" height="200" src="../images/{{image}}" alt="{{_id}}">
                    </a>
                    <div class="card-body">
                        <h3 class="fw-bolder">{{ name }}</h3>
                        <h6>Price: $<strong>{{price}}</strong></h6>
                        <h5>{{quantity}}</h5>
                        {{!-- <form action="products/cart" method="post"> --}}
                            {{!--
                        </form> --}}
                    </div>
                    <button type="submit" class="btn btn-warning col-md-8">Add to
                        cart</button>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>