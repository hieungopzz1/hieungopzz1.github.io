<nav class="navbar navbar-expand-lg" id="navbar">
    <div class="container">
        <div class="collapse navbar-collapse" id="mynavbar">
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <a class="nav-link active" href="/"><i class="fa-solid fa-house"></i>HOME</a>
                </li>
            </ul>
        </div>
    </div>
</nav>
<section class="packages" id="packages">
    <div class="container">
        <div class="row">
            {{#each ngocrong }}
            <div class="col-md-2 py-3 py-md-0">
                <div class="card">
                    <a href="ngocrong/show/{{_id}}">
                        <img width="100%" height="200" src="../images/{{image}}" alt="{{_id}}">
                    </a>
                    <div class="card-body">
                        <h3 class="fw-bolder">{{ name }}</h3>
                        <h6>Price: $<strong>{{price}}</strong></h6>
                        <h5>{{quantity}}</h5>
                    </div>
                    <button type="submit" class="btn btn-warning col-md-8">Add to
                        cart</button>
                </div>
            </div>
            {{/each}}
            {{#each lbx }}
            <div class="col-md-2 py-3 py-md-0">
                <div class="card">
                    <a href="lbx/show/{{_id}}">
                        <img width="100%" height="200" src="../images/{{image}}" alt="{{_id}}">
                    </a>
                    <div class="card-body">
                        <h3 class="fw-bolder">{{ name }}</h3>
                        <h6>Price: $<strong>{{price}}</strong></h6>
                        <h5>{{quantity}}</h5>

                    </div>
                    <button type="submit" class="btn btn-warning col-md-8">Add to
                        cart</button>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>